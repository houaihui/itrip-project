<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itrip.dao.itripImage.ItripImageMapper">

    <select id="getItripImageById" resultType="cn.itrip.pojo.ItripImage" >
        select
                id as id,
                type as type,
                targetId as targetId,
                position as position,
                imgUrl as imgUrl,
                creationDate as creationDate,
                createdBy as createdBy,
                modifyDate as modifyDate,
                modifiedBy as modifiedBy
        from itrip_image
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getItripImageListByMap" resultType="cn.itrip.pojo.ItripImage" parameterType="java.util.Map">
        select
                id as id,
                type as type,
                targetId as targetId,
                position as position,
                imgUrl as imgUrl,
                creationDate as creationDate,
                createdBy as createdBy,
                modifyDate as modifyDate,
                modifiedBy as modifiedBy
        from itrip_image
        <trim prefix="where" prefixOverrides="and | or">
                    <if test="id != null and id!=''">
                        and id=#{id}
                    </if>
                    <if test="type != null and type!=''">
                        and type=#{type}
                    </if>
                    <if test="targetId != null and targetId!=''">
                        and targetId=#{targetId}
                    </if>
                    <if test="position != null and position!=''">
                        and position=#{position}
                    </if>
                    <if test="imgUrl != null and imgUrl!=''">
                        and imgUrl=#{imgUrl}
                    </if>
                    <if test="creationDate != null and creationDate!=''">
                        and creationDate=#{creationDate}
                    </if>
                    <if test="createdBy != null and createdBy!=''">
                        and createdBy=#{createdBy}
                    </if>
                    <if test="modifyDate != null and modifyDate!=''">
                        and modifyDate=#{modifyDate}
                    </if>
        </trim>
         order by creationDate desc
        <if test="beginPos != null and beginPos!='' and pageSize != null  and pageSize !='' ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getItripImageCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from itrip_image
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="type != null and type!=''">
                    and type=#{type}
                </if>
                <if test="targetId != null and targetId!=''">
                    and targetId=#{targetId}
                </if>
                <if test="position != null and position!=''">
                    and position=#{position}
                </if>
                <if test="imgUrl != null and imgUrl!=''">
                    and imgUrl=#{imgUrl}
                </if>
                <if test="creationDate != null and creationDate!=''">
                    and creationDate=#{creationDate}
                </if>
                <if test="createdBy != null and createdBy!=''">
                    and createdBy=#{createdBy}
                </if>
                <if test="modifyDate != null and modifyDate!=''">
                    and modifyDate=#{modifyDate}
                </if>
                <if test="modifiedBy != null and modifiedBy!=''">
                    and modifiedBy=#{modifiedBy}
                </if>
        </trim>
    </select>

    <insert id="insertItripImage" parameterType="cn.itrip.pojo.ItripImage">
        insert into itrip_image(
                        type,
                        targetId,
                        position,
                        imgUrl,
                        creationDate,
                        createdBy,
                        modifyDate,
                        modifiedBy)
        values(
                     #{type},
                     #{targetId},
                     #{position},
                     #{imgUrl},
                     #{creationDate},
                     #{createdBy},
                     #{modifyDate},
                    #{modifiedBy})
    </insert>

    <update id="updateItripImage" parameterType="cn.itrip.pojo.ItripImage">
        update itrip_image
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                    <if test="id != null and id!=''">
                        id=#{id},
                    </if>
                    <if test="type != null and type!=''">
                        type=#{type},
                    </if>
                    <if test="targetId != null and targetId!=''">
                        targetId=#{targetId},
                    </if>
                    <if test="position != null and position!=''">
                        position=#{position},
                    </if>
                    <if test="imgUrl != null and imgUrl!=''">
                        imgUrl=#{imgUrl},
                    </if>
                    <if test="creationDate != null and creationDate!=''">
                        creationDate=#{creationDate},
                    </if>
                    <if test="createdBy != null and createdBy!=''">
                        createdBy=#{createdBy},
                    </if>
                    <if test="modifyDate != null and modifyDate!=''">
                        modifyDate=#{modifyDate},
                    </if>
                    <if test="modifiedBy != null and modifiedBy!=''">
                        modifiedBy=#{modifiedBy}
                    </if>
        </trim>
    </update>

    <delete id="deleteItripImageById" parameterType="Long">
        delete from itrip_image where id = #{id}
    </delete>
</mapper>